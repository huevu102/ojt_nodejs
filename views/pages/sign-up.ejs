<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>

  <body>
    <!-- header -->
    <%- include('../partials/header') %>

    <!-- main -->
    <main>
      <div class="container mt-5">
        <div class="row">
            <div class="col-3"></div>
            <div class="col-6">
                <form action="/users-mgmt" method="POST">
                    <div class="form-group mt-3">
                        <label for="exampleInputName1">Name</label>
                        <input type="text" class="form-control" aria-describedby="emailHelp" placeholder="Enter your name" name="userName">
                    </div>
                    <div class="form-group mt-3">
                        <label for="exampleInputEmail1">Email address</label>
                        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" name="userEmail">
                        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                    </div>
                    <div class="form-group mt-3">
                        <label for="exampleInputPassword1">Password</label>
                        <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="userPassword">
                    </div>
                    <div class="form-group form-check mt-3">
                        <input type="checkbox" class="form-check-input" id="exampleCheck1">
                        <label class="form-check-label" for="exampleCheck1">Agree to Terms and Conditions</label>
                    </div>
                    <a href="#"><small id="emailHelp" class="form-text text-muted">Terms and Conditions</small></a>
                    <div class="mt-3">
                        <button type="submit mt-3" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
            <div class="col-3"></div>
        </div>
      </div>
    </main>
  </body>

  <!-- footer -->
  <%- include('../partials/footer'); %>
</html>